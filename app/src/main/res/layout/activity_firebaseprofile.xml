<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivityfire"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/autoimage"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_weight="2"
        android:elevation="@android:dimen/app_icon_size">


        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/usermail"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:gravity="center"
            android:hint="@string/email"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:textColor="#0037FF"
            android:textSize="35dp"
            android:singleLine="true">

        </TextView>
    </LinearLayout>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="14dp"
        android:rowCount="3"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="5dp"
            android:id="@+id/passchange"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                >

                <ImageView
                    android:id="@+id/addnotes"
                    android:layout_width="148dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_lock_outline_black_24dp" />

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:text="Password"
                    android:textAlignment="center"
                    android:textColor="#121211"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/remove_user_button"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                >

                <ImageView
                    android:layout_width="148dp"
                    android:layout_height="68dp"
                    app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:text="Remove User"
                    android:textAlignment="center"
                    android:textColor="#121211"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/sign_out">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                >

                <ImageView
                    android:layout_width="148dp"
                    android:layout_height="68dp"
                    app:srcCompat="@drawable/logout"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:text="Logout"
                    android:textAlignment="center"
                    android:textColor="#121211"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="5dp"
            android:id="@+id/frirebasehome"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                >

                <ImageView
                    android:layout_width="148dp"
                    android:layout_height="68dp"
                    app:srcCompat="@drawable/ic_home_black_24dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textColor="#121211"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>




    </GridLayout>


</LinearLayout>